git submodule update --progress --init Objects/e060s90
git submodule update --progress --init Terrain/e060n20
git submodule update --progress --init Terrain/e060n30
git submodule update --progress --init Terrain/e060n40
git submodule update --progress --init Terrain/e060n50
git submodule update --progress --init Terrain/e060n60
git submodule update --progress --init Terrain/e060n70
git submodule update --progress --init Terrain/e060n80
git submodule update --progress --init Terrain/e060s20
