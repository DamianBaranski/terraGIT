git submodule update --progress --depth=1 --init Objects/w030s90
git submodule update --progress --depth=1 --init Terrain/w030n10
git submodule update --progress --depth=1 --init Terrain/w030n30
git submodule update --progress --depth=1 --init Terrain/w030n60
git submodule update --progress --depth=1 --init Terrain/w030n70
git submodule update --progress --depth=1 --init Terrain/w030n80
git submodule update --progress --depth=1 --init Terrain/w030s20
