## Install any tile listed completely (initializing and updating both Terrain and Objects)

git submodule update --progress --depth=1 --init Objects/e000n50
git submodule update --progress --depth=1 --init Objects/e000n60
git submodule update --progress --depth=1 --init Objects/e010n50
git submodule update --progress --depth=1 --init Objects/e010n60
git submodule update --progress --depth=1 --init Objects/e010n70
git submodule update --progress --depth=1 --init Objects/e020n60
git submodule update --progress --depth=1 --init Objects/e020n70
git submodule update --progress --depth=1 --init Objects/e030n60
git submodule update --progress --depth=1 --init Objects/e030n70
git submodule update --progress --depth=1 --init Terrain/e000n50
git submodule update --progress --depth=1 --init Terrain/e000n60
git submodule update --progress --depth=1 --init Terrain/e010n50
git submodule update --progress --depth=1 --init Terrain/e010n60
git submodule update --progress --depth=1 --init Terrain/e010n70
git submodule update --progress --depth=1 --init Terrain/e020n60
git submodule update --progress --depth=1 --init Terrain/e020n70
git submodule update --progress --depth=1 --init Terrain/e030n60
git submodule update --progress --depth=1 --init Terrain/e030n70

